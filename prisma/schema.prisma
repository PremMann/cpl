generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  Int
}

model League {
  id          Int         @id @default(autoincrement())
  name        String
  startDate   DateTime
  endDate     DateTime
  status      String      @default("active") // Possible values: "active", "completed", "paused"
  currentWeek Int         @default(1) // Tracks current matchweek
  teams       Team[]      @relation("LeagueTeams")
  matches     Match[]
  Standings   Standings[]
  Gameweek    Gameweek[]
}

model Team {
  id          Int         @id @default(autoincrement())
  name        String
  logoUrl     String?
  stadium     String?
  coach       String?
  foundedYear Int?
  players     Player[]
  homeMatches Match[]     @relation("HomeTeam")
  awayMatches Match[]     @relation("AwayTeam")
  standings   Standings[]
  leagues     League[]    @relation("LeagueTeams")
}

model Player {
  id           Int          @id @default(autoincrement())
  name         String
  status       String       @default("active") // Possible values: "active", "injured", "suspended"
  teamId       Int?
  team         Team?        @relation(fields: [teamId], references: [id])
  position     String?
  jerseyNumber Int?
  nationality  String?
  dateOfBirth  DateTime?
  matchEvents  MatchEvent[]
}

model Match {
  id          Int          @id @default(autoincrement())
  homeTeamId  Int
  awayTeamId  Int
  matchDate   DateTime
  homeScore   Int          @default(0)
  awayScore   Int          @default(0)
  status      String       @default("scheduled") // Possible values: "scheduled", "ongoing", "completed"
  leagueId    Int
  league      League       @relation(fields: [leagueId], references: [id])
  homeTeam    Team         @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam    Team         @relation("AwayTeam", fields: [awayTeamId], references: [id])
  matchEvents MatchEvent[]
  Gameweek    Gameweek?    @relation(fields: [gameweekId], references: [id])
  gameweekId  Int?
}

model MatchEvent {
  id        Int     @id @default(autoincrement())
  matchId   Int
  playerId  Int?
  eventType String  @default("goal") // Possible values: "goal", "yellow_card", "red_card", "substitution"
  minute    Int
  match     Match   @relation(fields: [matchId], references: [id])
  player    Player? @relation(fields: [playerId], references: [id])
}

model Standings {
  id             Int    @id @default(autoincrement())
  teamId         Int
  team           Team   @relation(fields: [teamId], references: [id])
  leagueId       Int
  league         League @relation(fields: [leagueId], references: [id])
  played         Int    @default(0)
  wins           Int    @default(0)
  draws          Int    @default(0)
  losses         Int    @default(0)
  goalsFor       Int    @default(0)
  goalsAgainst   Int    @default(0)
  goalDifference Int    @default(0)
  points         Int    @default(0)
}

model Gameweek {
  id         Int      @id @default(autoincrement())
  weekNumber Int // Matchweek number (1, 2, 3, ...)
  startDate  DateTime
  endDate    DateTime
  leagueId   Int
  league     League   @relation(fields: [leagueId], references: [id])
  matches    Match[]
}

model User {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
  role         String @default("fan") // Possible values: "admin", "fan"
  email        String @unique
}
